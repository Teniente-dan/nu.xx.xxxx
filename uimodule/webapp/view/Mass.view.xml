<mvc:View controllerName="nu.<%= module %>.<%= appname %>.controller.Mass"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:unified="sap.ui.unified"
	xmlns:form="sap.ui.layout.form" displayBlock="true" height="100%" busyIndicatorDelay="0">
	<Page title="{i18n>title}" showNavButton="true" navButtonPress="onPressToHome">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Upload" type="Accept" press="onUpload"/>
			</OverflowToolbar>
		</footer>
		<content>
			<HBox visible="{viewModel>/grupo1/vis}">
				<VBox width="97%">
					<Panel headerText="{i18n>MassView.MassUpload}" width="auto" class="sapUiResponsiveMargin">
						<content>
							<form:Form editable="true" id="__formDatGen">
								<form:layout>
									<form:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" />
								</form:layout>
								<form:formContainers>
									<form:FormContainer >
										<form:formElements>
											<form:FormElement label="Upload File">
												<form:fields>
													<unified:FileUploader value="{datosGral>/in1}" id="fileuploader" fileType="xlsx" iconOnly="true" icon="sap-icon://attachment" uploadComplete="onHandleUploadComplete" uploadOnChange="true" uploadStart="onHandleUploadStart" change="onHandleUploadStart" class="sapUiTinyMarginEnd" busy="{datosGral>/atta}" width="100%"/>
												</form:fields>
											</form:FormElement>
											<form:FormElement label="">
												<form:fields>
													<RadioButtonGroup >
														<RadioButton groupName="requestType" selected="{datosGral>/in14}" text="New TR Description">
														</RadioButton>
														<RadioButton groupName="requestType" selected="{datosGral>/in15}" text="Own Request">
														</RadioButton>
													</RadioButtonGroup>
												</form:fields>
											</form:FormElement>
											<form:FormElement label="" visible="{datosGral>/in14}">
												<form:fields>
													<Input id="in16" width="100%" value="{datosGral>/in16}" />
												</form:fields>
											</form:FormElement>
											<form:FormElement label="" visible="{datosGral>/in15}">
												<form:fields>
													<Input id="in17" width="100%" value="{datosGral>/in17}" showValueHelp="true" valueHelpRequest="onValueHelp($event, 'in17')" />
												</form:fields>
											</form:FormElement>
										</form:formElements>
									</form:FormContainer>
								</form:formContainers>
							</form:Form>
						</content>
					</Panel>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>